/*Даны натуральные числа К и N. Написать метод(методы) формирования массива А,
элементами которого являются числа, сумма цифр которых равна К и которые не большее
N.*/

package by.htp.hw.decomposition;

import java.util.Arrays;
import java.util.Scanner;

public class MassA {
    int k;
    int n;
    int sum;

    public static void main(String[] args) {
        MassA m = new MassA();
        m.tipp();
        m.addArray();

    }

    public void tipp() {
        Scanner sc = new Scanner(System.in);
        k = sc.nextInt();
        n = sc.nextInt();
    }

    public void addArray() {
        int j=0;
        int [] a = new int[n];
        for (int i = 10; i < n; i++) {//число от 10 до n
            int x = i;
            sum = 0;
            while (x != 0) {   //сумма цифр числа
                sum = sum + x % 10;
                x =x/ 10;
                if(sum==k){
                    a[j]=i;
                    j++;
                }
            }
            System.out.println("Сумма цифр в числе " + i + " = " + sum);

        }
        System.out.println(Arrays.toString(a));
    }

}



